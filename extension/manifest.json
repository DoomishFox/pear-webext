{
    "description": "Pear",
    "manifest_version": 2,
    "name": "Pear",
    "version": "0.1",
    "icons": {
        "48": "icons/pear.svg"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "pear@doomishfox.net",
            "strict_min_version": "50.0"
        }
    },

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "icons/message.svg"
    },

    "permissions": ["nativeMessaging"]
}